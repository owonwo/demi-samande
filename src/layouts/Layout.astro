---
import "../styles/global.css";
import { ContactBlock } from "../components/contact-block";
import { MainFooter } from "../components/footer";
import { MainHeader } from "../components/header.tsx";
import { NavMenu } from "../components/nav-menu.tsx";
import { getContent } from "../libs/fetchers";
import { baseUrl } from "../libs/utils";

const speakerContent = await getContent({ key: "speaker-content" });

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta
      name="description"
      content="An Industrious African Entrepreneur, Speaker, Author and Podcaster dedicated to re-imagining Africa as the global hub for value-added manufacturing and innovation"
    />
    <meta property="og:site_name" content="Demi Samande" />
    <meta
      property="og:title"
      content="Demi Samande â€” Author | Founder | Podcaster | Speaker"
    />
    <meta
      property="og:image"
      content={baseUrl("/assets/images/og-banner.png")}
    />
    <meta property="og:image:width" content={"1200px"} />
    <meta property="og:image:height" content={"630px"} />
    <meta property="og:image:type" content={"image/png"} />
    <meta property="og:url" content={baseUrl("/")} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_GB" />
    <meta
      property="og:description"
      content="Meet Demi, an Industrious African Entrepreneur, Speaker, Author and Podcaster dedicated to re-imagining Africa as the global hub for value-added manufacturing and innovation"
    />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content="Meet Demi Samande" />
    <meta
      property="twitter:image"
      content={baseUrl("/assets/images/og-banner.png")}
    />
    <meta
      property="twitter:description"
      content="Meet Demi, an Industrious African Entrepreneur, Speaker, Author and Podcaster dedicated to re-imagining Africa as the global hub for value-added manufacturing and innovation"
    />
    <meta property="description" content="Top Young African Enterpreneur" />
    <meta
      property="keywords"
      content="Young, Entrepreneur, Creator, Architect, Podcaster, Founder, Speaker, Author"
    />
  </head>

  <body class="font-body text-neutral-700">
    <MainHeader position="sticky" client:load variant="transparent">
      <NavMenu client:media="(max-width: 600px)" />
    </MainHeader>
    <slot />
    <ContactBlock contactEmail={speakerContent?.data?.buttonAction} />
    <MainFooter />
  </body>

  <!-- Google tag (gtag.js) -->
  <script
    async
    is:inline
    src="https://www.googletagmanager.com/gtag/js?id=G-Q7M3VLWZXW"></script>
  <script is:raw>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", "G-Q7M3VLWZXW");
  </script>
</html>
